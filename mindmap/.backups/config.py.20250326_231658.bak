import json
import os

CONFIG_FILE = 'config.json'

def load_api_key():
    if os.path.exists(CONFIG_FILE):
        with open(CONFIG_FILE, 'r') as f:
            config = json.load(f)
            return config.get('gemini_api_key', '')
    return ''

def save_api_key(api_key):
    config = {'gemini_api_key': api_key}
    with open(CONFIG_FILE, 'w') as f:
        json.dump(config, f)